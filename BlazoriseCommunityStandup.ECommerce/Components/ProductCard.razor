<Card>
    <CardImage Source="@ImageUrl" alt="..." />
    @if ( IsNew )
    {
        <Badge Color="Color.Success" Margin="Margin.Is2.FromTop.Is2.FromLeft" Class="position-absolute">New</Badge>
    }
    @if ( IsHot )
    {
        <Badge Color="Color.Danger" Margin="Margin.Is2.FromTop.Is2.FromRight" Class="position-absolute" Style="right: 0;">New</Badge>
    }
    @if ( Discount != null )
    {
        <Span Background="Background.Warning" Border="Border.Rounded" Margin="Margin.Is5.FromTop.Is2.FromLeft" Padding="Padding.Is2" Class="position-absolute">
            @($"-{Discount}%")
        </Span>
    }
    <CardBody>
        <CardSubtitle Margin="Margin.Is2.FromBottom">
            <Blazorise.Link To="/e-commerce/product/detail">Great product name goes here</Blazorise.Link>
        </CardSubtitle>
        <Div Margin="Margin.Is2.OnY" class="my-2">
            <Text TextWeight="TextWeight.Bold">$@FinalPrice</Text>
            @if ( Discount != null )
            {
                <Small TextColor="TextColor.Muted" Margin="Margin.Is2.FromLeft">
                    <del>$@Price</del>
                </Small>
            }
            <Rating SelectedValue="4" MaxValue="4" ReadOnly Margin="Margin.Is2.FromLeft" />
        </Div>
        <Buttons Width="Width.Is100" Size="Size.Small">
            <Button Color="Color.Primary" title="Add to cart">
                <Icon Name="IconName.CartPlus" />
            </Button>
            <Button Color="Color.Primary" Outline title="Add to wishlist">
                <Icon Name="IconName.Heart" />
            </Button>
        </Buttons>
    </CardBody>
</Card>
@code{
    [Parameter] public string ImageUrl { get; set; }

    [Parameter] public int Price { get; set; }

    [Parameter] public int? Discount { get; set; }

    [Parameter] public bool IsNew { get; set; }

    [Parameter] public bool IsHot { get; set; }

    int FinalPrice => (int)( Price - ( Price * Discount.GetValueOrDefault( 0 ) / 100m ) );
}
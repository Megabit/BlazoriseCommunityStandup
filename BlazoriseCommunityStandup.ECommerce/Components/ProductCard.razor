@inherits BaseProductCard

<Card Margin="Margin.Is3.FromBottom">
    <CardImage Source="@Product.ImageUrl" alt="..." />
    @if ( Product.IsNew )
    {
        <Badge Color="Color.Success" Margin="Margin.Is2.FromTop.Is2.FromLeft" Class="position-absolute">New</Badge>
    }
    @if ( Product.IsHot )
    {
        <Badge Color="Color.Danger" Margin="Margin.Is2.FromTop.Is2.FromRight" Class="position-absolute" Style="right: 0;">Hot</Badge>
    }
    @if ( Product.Discount != null )
    {
        <Span Background="Background.Warning" Border="Border.Rounded" Margin="Margin.Is5.FromTop.Is2.FromLeft" Padding="Padding.Is2" Class="position-absolute">
            @($"-{Product.Discount}%")
        </Span>
    }
    <CardBody>
        <CardSubtitle Margin="Margin.Is2.FromBottom">
            <Blazorise.Link To="@($"e-commerce/product/detail/{Product.Id}")">@Product.Name</Blazorise.Link>
        </CardSubtitle>
        <Div Margin="Margin.Is2.OnY">
            <Text TextWeight="TextWeight.Bold">$@FinalPrice</Text>
            @if ( Product.Discount != null )
            {
                <Small TextColor="TextColor.Muted" Margin="Margin.Is2.FromLeft">
                    <del>$@Product.Price</del>
                </Small>
            }
            <Rating SelectedValue="4" MaxValue="4" ReadOnly Margin="Margin.Is2.FromLeft" />
        </Div>
        <Buttons Width="Width.Is100" Size="Size.Small">
            <Button Color="Color.Primary" title="Add to cart" Clicked="AddToCart">
                <Icon Name="IconName.CartPlus" />
            </Button>
            <Button Color="Color.Primary" Outline title="Add to wishlist" Clicked="AddToWishList">
                <Icon Name="IconName.Heart" />
            </Button>
        </Buttons>
    </CardBody>
</Card>